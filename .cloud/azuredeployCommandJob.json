{
    "$schema": "https://schema.management.azure.com/schemas/2019-04-01/deploymentTemplate.json#",
    "contentVersion": "1.0.0.0",
    "parameters": {
        "workspaceName": {
            "type": "String",
            "metadata": {
                "description": "Specifies the name of the Azure Machine Learning workspace."
            },
            "defaultValue": "mnarkdev2"
        },
        "keyVaultName": {
            "defaultValue": "[concat('kva', uniqueString(parameters('workspaceName')))]",
            "type": "String",
            "metadata": {
                "description": "Specifies the name of the Azure keyvault to create."
            }
        },
        "storageAccountName": {
            "defaultValue": "[concat('storagea', uniqueString(parameters('workspaceName')))]",
            "type": "String",
            "metadata": {
                "description": "Specifies the name of the Azure storage account to create."
            }
        },
        "applicationInsightsName": {
            "defaultValue": "[concat('aia', uniqueString(parameters('workspaceName')))]",
            "type": "String",
            "metadata": {
                "description": "Specifies the name of the Azure app insights account to create."
            }
        },
        "location": {
            "defaultValue": "[resourceGroup().location]",
            "type": "String",
            "metadata": {
                "description": "Specifies the SKU size for interactive and remote compute."
            }
        },
        "computeName": {
            "type": "string",
            "metadata": {
                "description": "The compute you want this job to run on"
            },
            "defaultValue": "cpucluster"
        },
        "computeVmSize": {
            "defaultValue": "Standard_DS3_V2",
            "type": "String",
            "metadata": {
                "description": "Specifies the SKU size for interactive and remote compute."
            }
        },
        "computeMinNodeCount": {
            "defaultValue": 0,
            "type": "int",
            "metadata": {
                "description": "The minimum number of nodes to use on the cluster. If not specified, defaults to 0"
            }
        },
        "computeMaxNodeCount": {
            "defaultValue": 4,
            "type": "int",
            "metadata": {
                "description": " The maximum number of nodes to use on the cluster. If not specified, defaults to 4."
            }
        },
        "trainingScriptForUpload": {
            "type": "string",
            "metadata": {
                "description": "Link to training script."
            },
            "defaultValue": "https://raw.githubusercontent.com/mrudulan/DevPlatv2Template/master/code/lightgbm/iris/train.py"
        },
        "trainingScriptBlobContainer": {
            "type": "string",
            "defaultValue": "localuploads",
            "metadata": {
                "description": "The blob container that will hold the training script."
            }
        },
        "trainingScriptBlobPathInContainer": {
            "type": "string",
            "defaultValue": "test"
        },
        "datastoreName": {
            "type": "string",
            "defaultValue": "test"
        },
        "codeAssetName": {
            "type": "string",
            "defaultValue": "[newGuid()]",
            "metadata": {
                "description": "Name of code asset. Must be a Guid."
            }
        },
        "jobName": {
            "type": "string",
            "metadata": {
                "description": "Name of job."
            },
            "defaultValue": "command1"
        },
        "jobCuratedEnvironmentName": {
            "type": "string",
            "defaultValue": "AzureML-Minimal"
        },
        "jobCommand": {
            "defaultValue": [
                "python", "train.py"
            ],
            "type": "Array",
            "metadata": {
                "description": "Start up command in code job."
            }
        },
        "jobDistributedWorkerCount": {
            "defaultValue": 2,
            "type": "int",
            "metadata": {
                "description": "The number of workers for distributed training."
            }
        },
        "jobDistributedParameterServerCount": {
            "defaultValue": 1,
            "type": "int",
            "metadata": {
                "description": "The parameter server count for distributed training."
            }
        },
        "jobTags": {
            "type": "object",
            "defaultValue": {},
            "metadata": {
                "description": "Optional : Provide JSON object with 'key,value' pairs to add as tags on dataset. Example- {\"sampleTag1\": \"tagValue1\", \"sampleTag2\": \"tagValue2\"}"
            }
        },
        "uploadToBlobDeploymentScriptName": {
            "type": "string",
            "defaultValue": "UploadToBlob1"
        },
        "userAssignedIdentities": {
            "type": "string",
            "defaultValue": "/subscriptions/5f08d643-1910-4a38-a7c7-84a39d4f42e0/resourceGroups/mnarkdev/providers/Microsoft.ManagedIdentity/userAssignedIdentities/mnarkuai1"
        }
    },
    "variables": {
        "codeVersionResourceId": "[resourceId('Microsoft.MachineLearningServices/workspaces/codes/versions', parameters('workspaceName'), parameters('codeAssetName'), '1')]"
    },
    "resources": [
        {
            "type": "Microsoft.Resources/deployments",
            "apiVersion": "2020-06-01",
            "name": "createWorkspaceResources",
            "properties": {
                "mode": "Incremental",
                "templateLink": {
                    "relativePath": "azuredeployWorkspace.json"
                },
                "parameters": {
                    "workspaceName": {
                        "value": "[parameters('workspaceName')]"
                    },
                    "keyVaultName": {
                        "value": "[parameters('keyVaultName')]"
                    },
                    "storageAccountName": {
                        "value": "[parameters('storageAccountName')]"
                    },
                    "applicationInsightsName": {
                        "value": "[parameters('applicationInsightsName')]"
                    },
                    "location": {
                        "value": "[parameters('location')]"
                    }
                }
            }
        },
        {
            "type": "Microsoft.MachineLearningServices/workspaces/computes",
            "apiVersion": "2020-06-01",
            "name": "[concat(parameters('workspaceName'), '/', parameters('computeName'))]",
            "location": "[parameters('location')]",
            "dependsOn": [
                "createWorkspaceResources"
            ],
            "properties": {
                "computeType": "AmlCompute",
                "properties": {
                    "vmSize": "[parameters('computeVmSize')]",
                    "scaleSettings": {
                        "minNodeCount": "[parameters('computeMinNodeCount')]",
                        "maxNodeCount": "[parameters('computeMaxNodeCount')]"
                    }
                }
            }
        },
        {
            "type": "Microsoft.Resources/deployments",
            "apiVersion": "2020-06-01",
            "name": "uploadTrainingScriptToBlobContainer",
            "dependsOn": [
                "createWorkspaceResources"
            ],
            "properties": {
                "mode": "Incremental",
                "templateLink": {
                    "relativePath": "azuredeployBlobContainerAndUploadFile.json"
                },
                "parameters": {
                    "workspaceName": {
                        "value": "[parameters('workspaceName')]"
                    },
                    "storageAccountName": {
                        "value": "[parameters('storageAccountName')]"
                    },
                    "uploadToBlobDeploymentScriptName": {
                        "value": "[parameters('uploadToBlobDeploymentScriptName')]"
                    },
                    "linkToFileForUpload": {
                        "value": "[parameters('trainingScriptForUpload')]"
                    },
                    "blobContainer": {
                        "value": "[parameters('trainingScriptBlobContainer')]"
                    },
                    "blobPathInContainer": {
                        "value": "[parameters('trainingScriptBlobPathInContainer')]"
                    },
                    "userAssignedIdentities": {
                        "value": "[parameters('userAssignedIdentities')]"
                    }
                }
            }
        },
        {
            "type": "Microsoft.Resources/deployments",
            "apiVersion": "2020-06-01",
            "name": "createDatastore",
            "dependsOn": [
                "createWorkspaceResources",
                "uploadTrainingScriptToBlobContainer"
            ],
            "properties": {
                "mode": "Incremental",
                "templateLink": {
                    "relativePath": "azuredeployDatastore.json"
                },
                "parameters": {
                    "workspaceName": {
                        "value": "[parameters('workspaceName')]"
                    },
                    "storageAccountName": {
                        "value": "[parameters('storageAccountName')]"
                    },
                    "blobContainer": {
                        "value": "[parameters('trainingScriptBlobContainer')]"
                    },
                    "datastoreName": {
                        "value": "[parameters('datastoreName')]"
                    }
                }
            }
        },
        {
            "type": "Microsoft.Resources/deployments",
            "apiVersion": "2020-06-01",
            "name": "createCodeVersion",
            "dependsOn": [
                "createWorkspaceResources",
                "createDatastore",
                "uploadTrainingScriptToBlobContainer"
            ],
            "properties": {
                "mode": "Incremental",
                "templateLink": {
                    "relativePath": "azuredeployCodeVersion.json"
                },
                "parameters": {
                    "workspaceName": {
                        "value": "[parameters('workspaceName')]"
                    },
                    "pathInContainer": {
                        "value": "[parameters('trainingScriptBlobPathInContainer')]"
                    },
                    "datastoreName": {
                        "value": "[parameters('datastoreName')]"
                    },
                    "codeAssetName": {
                        "value": "[parameters('codeAssetName')]"
                    }
                }
            }
        },
        {
            "type": "Microsoft.MachineLearningServices/workspaces/jobs",
            "name": "[concat(parameters('workspaceName'), '/', parameters('jobName'))]",
            "apiVersion": "2020-09-01-preview",
            "location": "[parameters('location')]",
            "dependsOn": [
                "[parameters('workspaceName')]",
                "[variables('codeVersionResourceId')]",
                "[parameters('computeName')]"
            ],
            "properties": {
                "jobType": "Command",
                "environmentId": "[concat('/subscriptions/', subscription().subscriptionId, '/resourceGroups/', resourceGroup().name, '/providers/Microsoft.MachineLearningServices/Environments/', parameters('jobCuratedEnvironmentName'))]",
                "computeBinding": {
                    "computeId": "[parameters('computeName')]",
                    "nodeCount": "1"
                },
                "codeConfiguration": {
                    "codeArtifactId": "[variables('codeVersionResourceId')]",
                    "Command": "[parameters('jobCommand')]"
                },
                "Tags": "[parameters('jobTags')]",
                "DistributionConfiguration": {
                    "DistributionType": "Tensorflow",
                    "WorkerCount": "[parameters('jobDistributedWorkerCount')]",
                    "ParameterServerCount": "[parameters('jobDistributedParameterServerCount')]"
                }
            }
        }
    ],
    "outputs": {
        "result": {
            "value": "[reference(resourceId('Microsoft.MachineLearningServices/workspaces/jobs', parameters('workspaceName'), parameters('jobName')))]",
            "type": "object"
        }
    }
}
